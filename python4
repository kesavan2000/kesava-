def add(p,q):
    return p+q
def substract(p,q):
    return p-q
def multiply(p,q):
    return p*q
def division(p,q):
    return p/q
print("please select the operation")
print("a.add")
print("b.substract")
print("c.multiply")
print("d.division")
print("e.exit")
